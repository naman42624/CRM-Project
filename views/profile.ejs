<%- include('partials/header')  -%> 
<!-- Sidebar styles for this template -->
<link href="/css/sidebar.css" rel="stylesheet">

<link rel="stylesheet" href="/css/Telle-leadsList.css">
<link rel="stylesheet" href="/css/profile.css">

</head>
<body>
  
  <% if(user.role === "TelleCaller"){ %>
    <%- include('tellecaller/sidebar',{user, avatarSrc})  -%>
  <% } else if(user.role === "Counsellor"){ %>
    <%- include('counsellor/sidebar',{user, avatarSrc})  -%>
  <% } else if(user.role === "FOE"){ %>
    <%- include('foe/sidebar',{user, avatarSrc})  -%>
  <% } else if(user.role === "Admin"){ %>
    <%- include('admin/sidebar',{user, avatarSrc})  -%>
  <% } else if(user.role === "Branch Manager"){ %>
    <%- include('branchmanager/sidebar',{user, avatarSrc})  -%>
  <% } else if(user.role === "SOP Team"){ %>
    <%- include('sopteam/sidebar',{user, avatarSrc})  -%>
  <% } else if(user.role === "Filing Team"){ %>
    <%- include('filingteam/sidebar',{user, avatarSrc})  -%>
  <% } %>

    <div class="flex-grow-1 whole-body">
        
        <%- include('partials/topbar',{date, greeting})  -%>
        
        <div class="container-fluid main-body mt-0 p-3 h-100">
            <div class="row">
                <div class="col-md-6 m-0">
                    <div class="fs-2 breadcrumbForLeads">
                        <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/user/profile" class="text-decoration-none text-dark">My Profile</a></li>
                            </ol>
                        </nav>
                    </div>
                </div>
                <div class="col-md-6">
                    
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="card ">
                        <div class="card-body">
                            <div class="d-flex flex-column justify-content-center align-items-center">
                                <img src=<%= avatarSrc %>  alt="avatar" class="rounded-circle img-fluid w-50 h-50" >
                                <span class="text-dark mt-3 fs-5 fw-bold"><%= user.name %> </span>
                                <span class="text-muted fs-6 role"><%= user.role %> </span>
                                <div class="edit-details d-flex mt-2">
                                    <!-- delete avatar -->
                                    <div class="me-2">
                                      <form action="/user/deleteAvatar" method="post">
                                        <button type="submit" class="btn mt-3 btn-sm btn-danger"><i class="fa-solid fa-trash"></i></button>
                                      </form>
                                    </div>
                                    <a href="#uploadAvatar" data-bs-toggle="modal" data-bs-target="#uploadAvatar"  class="btn mt-3 btn-sm btn-warning"> <i class="fa-solid fa-pen"></i></a>
                                    <div class="modal fade" id="uploadAvatar" tabindex="-1" aria-labelledby="uploadAvatarLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <form action="/user/uploadAvatar" method="POST" enctype="multipart/form-data">
                                                    <div class="modal-header text-center">
                                                        <h5 class="modal-title w-100 fw-semibold" id="uploadAvatarLabel">Update Avatar</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body mx-4">
                                                            <div class="form-group d-flex flex-column justify-content-center align-items-center mb-3">
                                                                <img src=<%= avatarSrc %> id="preview" alt="avatar" class="rounded-circle img-fluid" style="width: 150px;">

                                                                <!-- choose afile  -->
                                                                <div>
                                                                    <!-- delete avatar -->
                                                                    
                                                                    <input type="file" name="avatar" id="avatar" class="d-none">
                                                                    <label for="avatar" class="mt-3 btn btn-sm btn-warning">Choose</label>
                                                                </div>
                                                                

                                                            </div>
                                                    </div>
                                                    <div class="modal-footer d-flex justify-content-center text-center">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                        <button type="submit" class="btn btn-primary">Update</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>`
                        
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3">
                                  <p class="mb-0">Full Name</p>
                                </div>
                                <div class="col-sm-9">
                                  <p class="text-muted name mb-0"><%= user.name %> </p>
                                </div>
                              </div>
                              <hr>
                              <div class="row">
                                <div class="col-sm-3">
                                  <p class="mb-0">Email</p>
                                </div>
                                <div class="col-sm-9">
                                  <p class="text-muted email mb-0"><%= user.username %></p>
                                </div>
                              </div>
                              <hr>
                              <div class="row">
                                <div class="col-sm-3">
                                  <p class="mb-0">Phone</p>
                                </div>
                                <div class="col-sm-9">
                                  <p class="text-muted phone mb-0"><%= user.phone %></p>
                                </div>
                              </div>
                              <hr>
                              <div class="row">
                                <div class="col-sm-3">
                                  <p class="mb-0">Mobile</p>
                                </div>
                                <div class="col-sm-9">
                                  <p class="text-muted mb-0"><%= user.phone %></p>
                                </div>
                              </div>
                              <hr>
                              <div class="row">
                                <div class="col-sm-3">
                                  <p class="mb-0">Address</p>
                                </div>
                                <div class="col-sm-9">
                                  <p class="text-muted mb-0"><%= user.address %></p>
                                </div>
                              </div>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
                            

    </div>

<%- include('partials/footer')  -%>

<script src="/js/profile.js"></script>
</body>
</html>
