<%- include('../partials/header')  -%> 
<!-- Sidebar styles for this template -->
<link href="/css/sidebar.css" rel="stylesheet">

<link rel="stylesheet" href="/css/Telle-leadsList.css">
<link rel="stylesheet" href="/css/leads.css">

</head>
<body>
  

    <%- include('sidebar',{user, avatarSrc})  -%> 

    <div class="flex-grow-1 whole-body">

        <%- include('../partials/topbar',{date, greeting})  -%>
        
        <div class="container-fluid main-body mt-0 p-3 h-100">
            <div class="row">
                <div class="col-md-6 m-0">
                    <div class="fs-2 breadcrumbForLeads">
                        <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/foe/leads" class="text-decoration-none text-dark">Leads</a></li>
                                <li class="breadcrumb-item active" aria-current="page"><span class="leadName"><%= lead.name %> </span></li>
                            </ol>
                        </nav>
                    </div>
                    
                </div>
                <div class="col-md-6">
                   <div class="add-new-item  text-end">
                        <a href="#updateLead" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#updateLead" value="<%= lead.call %>/<%= lead.telleFollowUps %>"><i class="fa-solid fa-pen"></i> Edit Details</a>
                   </div>
                   <!-- Edit Modal -->
                   <div class="modal fade" id="updateLead" tabindex="-1" aria-labelledby="updateLeadLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <form action="/foe/i/leads/<%= lead._id %>" method="POST">
                                    <div class="modal-header text-center">
                                        <h5 class="modal-title w-100 fw-semibold" id="updateLeadLabel">Update Details</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body mx-4">
                                        
                                            <div class="form-group mb-3">
                                                <label for="leadName" class="mb-1">Name</label>
                                                <input type="text" class="form-control" name="name" value="<%= lead.name %>" placeholder="Enter name" required>
                                            </div>
                                            <div class="form-group mb-3">
                                                <label for="leadPhone" class="mb-1">Phone</label>
                                                <input type="text" class="form-control" name="phone" value="<%=lead.phone %>" placeholder="Enter Phone" required>
                                            </div>
                                            <div class="form-group mb-3">
                                                <label for="leadEmail" class="mb-1">Email</label>
                                                <input type="email" class="form-control" name="email" value="<%= lead.email %>" placeholder="Enter Email" required>
                                            </div>
                                            <div class="form-group mb-3">
                                                <label for="leadCountry" class="mb-1">Interested Country</label>
                                                <input type="text" class="form-control" name="interestedCountry" value="<%= lead.interestedCountry %>" placeholder="Enter Interested Country" required>
                                            </div>
                                            <div class="form-group mb-3">
                                                <label for="leadCollege" class="mb-1">College/University</label>
                                                <input type="text" class="form-control" name="college" value="<%= lead.college %>" placeholder="Enter College/University" required>
                                            </div>
                                            <div class="form-group mb-3">
                                                <label for="leadCourse" class="mb-1">Course</label>
                                                <input type="text" class="form-control" name="course" value="<%= lead.course %>" placeholder="Enter Course">
                                            </div>
                                            <div class="form-group mb-3">
                                                <label for="leadStatus" class="mb-1">Select New Status</label>
                                                <select class="form-select" name="status" required>
                                                    <option>- No Status -</option>
                                                    <option>Cold</option>
                                                    <option>Hot</option>
                                                    <option>Dead</option>
                                                    <option>Not Eligible</option>
                                                </select>
                                            </div>
                                    </div>
                                    <div class="modal-footer d-flex justify-content-center text-center">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                        <button type="submit" class="btn btn-primary">Update</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                
            </div>

            <div class="row mb-3">
                <div class="col-md-5">
                    <div class="Search">
                        <div class="input-group">
                            <form action="/searchLeadDetails" method="POST"></form>
                                <input type="text" class="form-control" placeholder="Search in Details">
                                <div class="input-group-append">
                                    <button class="btn " type="submit">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-md-7 d-flex justify-content-end">
                    <div class="add-new-item me-3 text-end">
                        <a href="#updateScheduledWalksInDate" class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#updateScheduledWalksInDate" value="<%= lead.call %>/<%= lead.telleFollowUps %>"><i class="fa-solid fa-calendar-check"></i> Schedule WalkIn</a>
                   </div>
                    <div class="modal fade" id="updateScheduledWalksInDate" tabindex="-1" aria-labelledby="updateScheduledWalksInDateLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <form action="/foe/i/leads/<%= lead._id %>" method="POST">
                                    <div class="modal-header text-center">
                                        <h5 class="modal-title w-100 fw-semibold" id="updateScheduledWalksInDateLabel">Schedule WalksIn</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body mx-4">
                                        <div class="form-group mb-3">
                                            <label for="leadScheduledWalksInDate" class="mb-1">Scheduled WalksIn Date</label>
                                            <input type="date" class="form-control" name="scheduledWalksInDate" value="<%= lead.scheduledWalksInDate %>" placeholder="Enter Scheduled WalksIn Date" required>
                                        </div>
                                    </div>
                                    <div class="modal-footer d-flex justify-content-center text-center">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                        <button type="submit" class="btn btn-primary">Schedule</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="add-new-item me-3 text-end">
                        <a href="#updateCounsellor" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#updateCounsellor" value="<%= lead.call %>/<%= lead.telleFollowUps %>"><i class="fa-solid fa-user-plus"></i> Assign Counsellor</a>
                   </div>
                    <div class="modal fade" id="updateCounsellor" tabindex="-1" aria-labelledby="updateCounsellorLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <form action="/foe/i/leads/<%= lead._id %>" method="POST">
                                    <div class="modal-header text-center">
                                        <h5 class="modal-title w-100 fw-semibold" id="updateCounsellorLabel">Assign Counsellor</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body mx-4">
                                        <div class="form-group mb-3">
                                            <label for="leadCounsellor" class="mb-1">Counsellor</label>
                                            <select class="form-select" name="counsellor" required>
                                                <option value="<%= lead.counsellor %>"><%= (lead.counsellor)?lead.counsellor.name:"" %> </option>
                                                <% counsellors.forEach(function(counsellor){ %> 
                                                <option value="<%= counsellor._id %>"><%= counsellor.name %></option>
                                                <% }) %>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="modal-footer d-flex justify-content-center text-center">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                        <button type="submit" class="btn btn-primary">Assign</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="text-end">
                        <form action="/foe/markWalkIn/<%= lead._id %> " method="post">
                            <% if(lead.walksIn) { %> 
                            <button type="submit" class="btn btn-light"><i class="fa-solid text-danger fa-circle-xmark"></i> Mark Walk-In</button>
                            <% } else { %>
                            <button type="submit" class="btn btn-light"><i class="fa-solid text-success fa-circle-check"></i>  Mark Walk-In</button>
                            <% } %>
                        </form>
                    </div>
                </div>
            </div>
            
            <div class="row mb-3">
                <div class="col-md-3">
                    <div class="card h-100">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <span class="card-title fs-5 fw-semibold">Name</span>
                        </div>
                        <div class="card-body d-flex justify-content-center align-items-center">
                            <div class="text-muted">
                                <span><%= lead.name %> </span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="card h-100">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <span class="card-title fs-5 fw-semibold">Email</span>
                        </div>
                        <div class="card-body d-flex justify-content-center align-items-center">
                            <div class="text-muted">
                                <span><%= lead.email %> </span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card h-100">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <span class="card-title fs-5 fw-semibold">Interested Country</span>
                        </div>
                        <div class="card-body d-flex justify-content-center align-items-center">
                            <div class="text-muted">
                                <span><%= lead.interestedCountry %> </span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="card h-100">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <span class="card-title fs-5 fw-semibold">Phone</span>
                        </div>
                        <div class="card-body d-flex justify-content-center align-items-center">
                            <div class="text-muted">
                                <span><%= lead.phone %> </span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="card h-100">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <span class="card-title fs-5 fw-semibold">Status</span>
                        </div>
                        <div class="card-body d-flex justify-content-center align-items-center">
                            <div class="text-muted">
                                <span><%= lead.status %> </span>
                            </div>
                        </div>
                    </div>
                </div>


            </div>

            <div class="row mb-3">
                <div class="col-md-3">
                    <div class="card h-100">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <span class="card-title fs-5 fw-semibold">College/University</span>
                        </div>
                        <div class="card-body d-flex justify-content-center align-items-center">
                            <div class="text-muted">
                                <span><%= lead.college %> </span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="card h-100">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <span class="card-title fs-5 fw-semibold">FollowUp Date</span>
                        </div>
                        <div class="card-body d-flex justify-content-center align-items-center">
                            <div class="text-muted">
                                <span><%= lead.telleFollowUpDate %> </span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card h-100">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <span class="card-title fs-5 fw-semibold">Course</span>
                        </div>
                        <div class="card-body d-flex justify-content-center align-items-center">
                            <div class="text-muted">
                                <span><%= lead.course %> </span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="card h-100">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <span class="card-title fs-5 fw-semibold">Counsellor</span>
                        </div>
                        <div class="card-body d-flex justify-content-center align-items-center">
                            <div class="text-muted">
                                <span><%= (lead.counsellor)?lead.counsellor.name:"" %> </span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="card h-100">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <span class="card-title fs-5 fw-semibold">Call</span>
                        </div>
                        <div class="card-body d-flex justify-content-center align-items-center">
                            <div class="text-muted">
                                <span><%= lead.call %> </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-3">
                    <div class="card h-100">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <span class="card-title fs-5 fw-semibold">Scheduled WalkIn</span>
                        </div>
                        <div class="card-body d-flex justify-content-center align-items-center">
                            <div class="text-muted">
                                <span><%= lead.scheduledWalksInDate %> </span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="card h-100">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <span class="card-title fs-5 fw-semibold">Comments</span>
                        </div>
                        <div class="card-body d-flex justify-content-center align-items-center">
                            <div class="text-muted">
                                <span><%= lead.comments %> </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
                            

    </div>


<%- include('../partials/footer')  -%>

</body>
</html>


