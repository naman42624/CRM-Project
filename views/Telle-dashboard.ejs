<%- include('partials/header')  -%> 

<link rel="stylesheet" href="/css/Telle-leadsList.css">
<link rel="stylesheet" href="/css/Telle-dashboard.css">

<%- include('partials/sidebar')  -%>

<div class="flex-grow-1 whole-body">
    <div class="container-fluid topBar mb-0">
        <div class="row mb-0">
            <div class="col-md-6">
                <div class="Search-anything">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for anything here.">
                        <div class="input-group-append">
                            <button class="btn " type="button">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="language d-flex align-items-center">
                    <i class="fa-solid fa-language fs-3 h-100"></i>
                    <form action="/language" method="post">
                        <select class="form-select d-inline" >
                            <option>English (US)</option>
                            <option>English (UK)</option>
                            <option>French</option>
                        </select>
                    </form>
                </div>
            </div>
            <div class="col-md-3">
                <div class="GoodMorning text-end me-4">
                    <span class="m-0 p-0 d-block fw-semibold"><i class="fa-solid fa-sun text-warning me-1"></i> <%= greeting %></span>
                    <span class="m-0 p-0 d-block date"><%= date %> </span>
                </div>
            </div>
        </div>
    </div>
    
    <div class="container-fluid main-body mt-0 p-3 h-100">
        <div class="row">
            <div class="col-md-6 m-0">
                <div class="fs-2 breadcrumbForLeads">
                    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/" class="text-decoration-none text-dark">Dashboard</a></li>
                        </ol>
                    </nav>
                </div>
            </div>
            <div class="col-md-6">
               
            </div>
        </div>

        <div class="row ">
            <div class="col-md-4">
                <div class="card h-100 border-success">
                    <div class="card-body d-flex align-items-center justify-content-center">
                        <div class="d-flex flex-column justify-content-center align-items-center">
                            <span class="text-dark dashboard-count fs-3 fw-bold">200</span>
                            <span class="text-dark text-center lh-sm fs-5 pt-2">Total Pending Tasks</span>
                        </div>
                    </div>
                    <div class="card-footer border-success bg-success bg-opacity-50">
                        <div class="d-flex justify-content-center align-items-center">
                            <span class="text-muted"><a href="/Telle-task" class="text-decoration-none text-muted"> View Detailed Report <i class="fa-solid fa-angles-right"></i></a></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-primary">
                    <div class="card-body d-flex align-items-center justify-content-center">
                        <div class="d-flex flex-column justify-content-center align-items-center">
                            <span class="text-dark dashboard-count fs-3 fw-bold"><%= hotLeads %> </span>
                            <span class="text-dark text-center lh-sm fs-5 pt-2">Total Hot Leads</span>
                        </div>
                    </div>
                    <div class="card-footer border-primary bg-primary bg-opacity-50">
                        <div class="d-flex justify-content-center align-items-center">
                            <span class="text-muted"><a href="Telle-leads/Hot" class="text-decoration-none text-muted"> View Detailed Report <i class="fa-solid fa-angles-right"></i></a></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-warning">
                    <div class="card-body d-flex align-items-center justify-content-center">
                        <div class="d-flex flex-column justify-content-center align-items-center">
                            <span class="text-dark dashboard-count fs-3 fw-bold"><%= leadsToday %></span>
                            <span class="text-dark text-center lh-sm fs-5 pt-2">Total Pending Follow Ups</span>
                        </div>
                    </div>
                    <div class="card-footer border-warning bg-warning bg-opacity-50">
                        <div class="d-flex justify-content-center align-items-center">
                            <span class="text-muted"><a href="/allFollowups" class="text-decoration-none text-muted"> View Detailed Report <i class="fa-solid fa-angles-right"></i></a></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row my-5">
            <div class="col-md-6 col-sm-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span class="card-title fs-5 fw-bold">Tasks</span>
                        <i class="fa-solid fa-angles-right h-100"></i>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Task</th>
                                        <th>Status</th>
                                        <th>Assigned By</th>
                                        <th>Due Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>
                                            <a href="#" class="text-decoration-none text-dark">
                                                <span class="text-muted">Task 1</span>
                                            </a>
                                        </td>
                                        <td>
                                            <span class="badge text-danger fs-6 opacity-50">Pending</span>
                                        </td>
                                        <td>
                                            <span class="text-muted">Bells-Admin</span>
                                        </td>
                                        <td>
                                            <span class="text-muted">19/6/2022</span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <a href="#" class="text-decoration-none text-dark">
                                                <span class="text-muted">Task 2</span>
                                            </a>
                                        </td>
                                        <td>
                                            <span class="badge text-warning fs-6 opacity-50">In Process</span>
                                        </td>
                                        <td>
                                            <span class="text-muted">Bells-Admin</span>
                                        </td>
                                        <td>
                                            <span class="text-muted">20/6/2022</span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <a href="#" class="text-decoration-none text-dark">
                                                <span class="text-muted">Task 3</span>
                                            </a>
                                        </td>
                                        <td >
                                            <span class="badge text-success fs-6 opacity-50">Completed</span>
                                        </td>
                                        <td>
                                            <span class="text-muted">Bells-Admin</span>
                                        </td>
                                        <td>
                                            <span class="text-muted">22/6/2022</span>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-sm-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span class="card-title fs-5 fw-bold">Follow-ups</span>
                        <a href="/Telle-leads/All" class="text-decoration-none text-dark"><i class="fa-solid fa-angles-right h-100"></i></a>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Lead</th>
                                        <th>Call</th>
                                        <th>Lead From</th>
                                        <th>Phone</th>
                                        <th>Country Interested</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% leads.forEach(function(lead) { %> 
                                    <tr>
                                        <td>
                                            <a href="/leads/<%= lead._id %>" class="text-decoration-none text-dark">
                                                <span class="text-muted"><%= lead.name %></span>
                                            </a>
                                        </td>
                                        <td>
                                            <span class="badge text-muted fs-6 opacity-50"><%= lead.call %></span>
                                        </td>
                                        <td>
                                            <span class="text-muted"><%= lead.leadFrom %></span>
                                        </td>
                                        <td>
                                            <span class="text-muted"><%= lead.phone %></span>
                                        </td>
                                        <td>
                                            <span class="text-muted"><%= lead.interestedCountry %></span>
                                        </td>
                                    </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </div>
                        

</div>


<%- include('partials/footer')  -%>



