<%- include('partials/header')  -%> 

<link rel="stylesheet" href="/css/Telle-leadsList.css">

<%- include('partials/sidebar')  -%>

    <div class="flex-grow-1 whole-body">
        <div class="container-fluid topBar mb-0">
            <div class="row mb-0">
                <div class="col-md-6">
                    <div class="Search-anything">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search for anything here.">
                            <div class="input-group-append">
                                <button class="btn " type="button">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="language d-flex align-items-center">
                        <i class="fa-solid fa-language fs-3 h-100"></i>
                        <form action="/language" method="post">
                            <select class="form-select d-inline" >
                                <option>English (US)</option>
                                <option>English (UK)</option>
                                <option>French</option>
                            </select>
                        </form>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="GoodMorning text-end me-4">
                        <span class="m-0 p-0 d-block fw-semibold"><i class="fa-solid fa-sun text-warning me-1"></i> <%= greeting %></span>
                        <span class="m-0 p-0 d-block date"><%= date %> </span>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="container-fluid main-body mt-0 p-3 h-100">
            <div class="row">
                <div class="col-md-12 m-0">
                    <div class="fs-2 breadcrumbForLeads">
                        <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/" class="text-decoration-none text-dark">Dashboard</a></li>
                                <li class="breadcrumb-item active" aria-current="page">FollowUps</li>
                            </ol>
                        </nav>
                    </div>
                </div>
                <!-- <div class="col-md-6">
                   
                </div> -->
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <div class="card mb-4">
                        <div class="card-header"><i class="fas fa-table mr-1"></i>  FollowUps</div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover" id="List" width="100%" cellspacing="0">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Lead</th>
                                            <th>Date</th>
                                            <th>Time</th>
                                            <th>Call Response</th>
                                            <th>FollowUp By</th>
                                            <th>Comments</th>
                                        </tr>
                                    </thead>
                                    <tbody class="table-group-divider">
                                        <% followups.forEach(function(followup) { %>
                                            <tr>
                                                <td><%= followup.lead.name %></td>
                                                <td><%= followup.date %></a></td>
                                                <td>
                                                    <%= followup.time %>
                                                </td>
                                                <td><%= followup.call %></td>
                                                <td><%= followup.followupBy %></td>
                                                <td><%= followup.comments %></td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
                            
    </div>

<%- include('partials/footer')  -%>