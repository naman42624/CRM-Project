<%- include('partials/header')  -%> 

<link rel="stylesheet" href="/css/register.css">


    <div class="container my-5 ">
        <form action="/user/register" id="registerForm" method="post">
            <div class="card bg-light p-0">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 ">
                
                            <div class="d-flex flex-column justify-content-center align-items-center">
                                
                                <div>
                                    <img src="https://bellsoverseas.com/wp-content/uploads/2020/11/Bells-Overseas.png" alt="logo" class="w-50 h-50">
                                </div>

                               
                                <div class="role mt-4 mb-5 d-flex justify-content-between align-items-center">
                                    <div>
                                        <span class="text-dark fs-5 fw me-2">Role: </span>
                                    </div>
                                    <select name="role" class="form-select d-inline"  required>
                                        <option>User</option>
                                        <option>TelleCaller</option>
                                        <option>Counsellor</option>
                                        <option>FOE</option>
                                        <option>HR</option>
                                        <option>Branch Manager</option>
                                        <option>SOP Team</option>
                                        <option>Filing Team</option>
                                        <option>Application Team</option>
                                        <option>Interview Team</option>
                                    </select>
                                </div>
                                <div class="mt-5 pt-5">
                                   <span class="text-dark">Already have an account?</span> <a href="/user/login" class="text-primary fw-semibold text-decoration-none">Login</a>
                                </div>
                                <div class="mt-3">
                                    <p class="text-center text-secondary">
                                        Â© 2022 Bells Overseas. All rights reserved.
                                    </p>
                                </div>
                            </div>
                        </div>


                        <div class="col-md-8">
               
                            <div class="d-flex justify-content-end align-items-center">
                                <h3 class="card-title text-muted fw-bold">REGISTER</h5>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="name">Name</label>
                                        <input type="text" class="form-control" id="name" name="name" placeholder="Enter name" required>
                                        <span><small class="text-danger nameWarning"></small></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="username">Email</label>
                                        <input type="email" class="form-control" id="email" name="username" placeholder="Enter email" required>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mt-3">
                                        <label for="password">Password</label>
                                        <input type="password" class="form-control" id="password" name="password" placeholder="Enter password" required>
                                        <span><small class="text-danger passWarning"></small></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mt-3">
                                        <label for="cpassword">Confirm Password</label>
                                        <input type="password" class="form-control" id="cpassword" name="cpassword" placeholder="Confirm password" required>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group mt-3">
                                <label for="phone">Phone</label>
                                <input type="text" class="form-control" id="phone" name="phone" placeholder="Enter phone" minlength="10" maxlength="10" required>
                            </div>
                            <div class="form-group mt-3">
                                <label for="address">Address</label>
                                <input type="text" class="form-control" id="address" name="address" placeholder="Enter address" required>
                            </div>

                            <div class="mt-4 d-flex justify-content-center align-items-center">
                                <button type="submit" class="btn btn-primary btn-lg btn-danger">Register</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>



<%- include('partials/footer')  -%>

<script src="/js/register.js"></script>
</body>
</html>