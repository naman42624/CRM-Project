<%- include('./partials/header.ejs') -%>

    <link rel="stylesheet" href="/css/application.css">
    </head>

    <body>
        <!-- Tab-bar -->
        <%- include('tabBar') -%>

            <div class="p-4">
                <div class="head">
                    <h3 class="mb-3">Upload Documents of </h3>
                    <div class="table-responsive">
                        <table class="table table-hover" width="100%" cellspacing="0">
                            <thead class="table-light">
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>Student Enrolment Date</th>
                                </tr>
                            </thead>
                            <tbody class="table-group-divider">
                                <tr>
                                    <td>
                                        <%= user.name %>
                                    </td>
                                    <td>
                                        <%= user.username %>
                                    </td>
                                    <td>
                                        <%= user.phone %>
                                    </td>
                                    <td>
                                        <% const cDate1 = new Date(user.enrollmentDate).toLocaleDateString("en-GB") %>
                                        <%= cDate1 %>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <ul class="nav nav-tabs nav-fill bg-light">
                    <li class="nav-item active">
                        <a class="nav-link fs-4 fw-bold" href="/enrolledUser/save/personal/<%= user._id %>">Personal Information</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fs-4 fw-bold" href="/enrolledUser/save/academic/<%= user._id %>">Academic Information</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fs-4 fw-bold" href="/enrolledUser/save/work/<%= user._id %>">Work Information</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fs-4 fw-bold" href="/enrolledUser/save/test/<%= user._id %>">Test Information</a>
                    </li>
                </ul>

<h3>Tests</h3>
                <form action="/enrolledUser/save/test/<%= user._id %>" method="POST">
                    <label for="testName">Test Name</label>
                    <input type="text" name="testName" id="testName"><br>
                    <label for="overallScore">Overall Score</label>
                    <input type="text" name="overallScore" id="overallScore"><br>
                    <label for="testDate">Test Date</label>
                    <input type="date" name="testDate" id="testDate"><br>
                    <label for="testLocation">Location</label>
                    <input type="text" name="testLocation" id="testLocation"><br>
                    <label for="readingScore">Reading Score</label>
                    <input type="text" name="readingScore" id="readingScore"><br>
                    <label for="writingScore">Writing Score</label>
                    <input type="text" name="writingScore" id="writingScore"><br>
                    <label for="listeningScore">Listening Score</label>
                    <input type="text" name="listeningScore" id="listeningScore"><br>
                    <label for="speakingScore">Speaking Score</label>
                    <input type="text" name="speakingScore" id="speakingScore"><br>
                    <label for="trfNo">TRF No.</label>
                    <input type="text" name="trfNo" id="trfNo"><br>
                    <div class="submit">
                        <input type="submit" value="Save">
                    </div>
                </form>
                
                <script>
                    $(document).ready(function () {
                        let d = document.getElementById('dob').value;
                        console.log(d);
                        let datestring = d.getFullYear().toString().padStart(4, '0') + '-' + (d.getMonth() + 1).toString().padStart(2, '0') + '-' + d.getDate().toString().padStart(2, '0');
                        document.getElementById('dob').value = datestring;
                    })
                </script>


                <%- include('./partials/footer') -%>

    </body>

    </html>