    <script>
        $(document).ready(function () {
            $("#highestDegree").change(function () {
                $(this).find("option:selected")
                    .each(function () {
                        var optionValue = $(this).attr("value");
                        if (optionValue === "Bachelor") {
                            $(".Bachelor").show();
                            $(".Master").hide();
                            $(".twelve").show();
                        } else if(optionValue === "Master"){
                            $(".box").show();
                        }
                        else if(optionValue === "twelve"){
                            $(".Bachelor").hide();
                            $(".Master").hide();
                            $(".twelve").show();
                        }
                        else {
                            $(".box").hide();
                        }
                    });
            }).change();
        });
    </script>

