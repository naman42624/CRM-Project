<%- include('../partials/header')  -%> 
<!-- Sidebar styles for this template -->
<link href="/css/sidebar.css" rel="stylesheet">

<link rel="stylesheet" href="/css/Telle-leadsList.css">

</head>
<body>
  

  <%- include('sidebar',{user, avatarSrc})  -%> 

    <div class="flex-grow-1 whole-body">

      <%- include('../partials/topbar',{date, greeting})  -%>
        
        <div class="container-fluid main-body mt-0 p-3 h-100">
            <div class="row">
                <div class="col-md-12 m-0">
                    <div class="fs-2 breadcrumbForLeads">
                        <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/tellecaller/Telle-leads" class="text-decoration-none text-dark">Leads</a></li>
                                <li class="breadcrumb-item"><a href="/tellecaller/leads/<%= leadId %>" class="text-decoration-none text-dark"><%= followups[0].lead.name %></a></li>
                                <li class="breadcrumb-item active" aria-current="page">FollowUps</li>
                            </ol>
                        </nav>
                    </div>
                </div>
                <!-- <div class="col-md-6">
                   
                </div> -->
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <div class="card mb-4">
                        <div class="card-header"><i class="fas fa-table mr-1"></i>  FollowUps</div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover List" width="100%" cellspacing="0">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Date</th>
                                            <th>Time</th>
                                            <th>Call Response</th>
                                            <th>FollowUp By</th>
                                            <th>Comments</th>
                                        </tr>
                                    </thead>
                                    <tbody class="table-group-divider">
                                        <% followups.forEach(function(followup) { %>
                                            <tr>
                                                <td><%= followup.date %></a></td>
                                                <td>
                                                    <%= followup.time %>
                                                </td>
                                                <td><%= followup.call %></td>
                                                <td><%= (followup.followupBy)?followup.followupBy.name:" " %></td>
                                                <td><%= followup.comments %></td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
                            
    </div>

<%- include('../partials/footer')  -%>

</body>
</html>